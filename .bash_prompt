COLOR_WHITE="\033[1;37m"
COLOR_BLUE="\033[0;34m"
COLOR_GREEN="\033[0;32m"
COLOR_CYAN="\033[0;36m"
COLOR_RED="\033[0;31m"
COLOR_PURPLE="\033[0;35m"
COLOR_YELLOW="\033[0;33m"
COLOR_GRAY="\033[1;30m"
RESET="\033[m"

export COLOR_WHITE
export COLOR_BLUE
export COLOR_GREEN
export COLOR_CYAN
export COLOR_RED
export COLOR_PURPLE
export COLOR_YELLOW
export COLOR_GRAY
export RESET

function parse_git_dirty() {
	[[ $(git status 2> /dev/null | tail -n1) != "nothing to commit (working directory clean)" ]] && echo "*"
}

function parse_git_branch() {
	git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e "s/* \(.*\)/\1$(parse_git_dirty)/"
}

export PS1="\[$COLOR_BLUE\]\u \[$COLOR_WHITE\]at \[$COLOR_BLUE\]\h \[$COLOR_WHITE\]in \[$COLOR_GREEN\]\w\[$COLOR_WHITE\]\$([[ -n \$(git branch 2> /dev/null) ]] && echo \" on \")\[$COLOR_PURPLE\]\$(parse_git_branch)\[$COLOR_WHITE\]\n\$ \[$RESET\]"
export PS2="\[$COLOR_RED\]→ \[$RESET\]"